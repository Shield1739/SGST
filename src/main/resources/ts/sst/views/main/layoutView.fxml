   <children>
      <BorderPane prefHeight="720.0" prefWidth="1280.0">
         <left>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="box" BorderPane.alignment="CENTER">
               <children>
                  <Pane prefHeight="70.0" prefWidth="200.0">
                     <children>
                        <Text fill="#f9f9f9" layoutX="42.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SGST">
                           <font>
                              <Font name="System Bold" size="48.0" />
                           </font>
                        </Text>
                     </children>
                  </Pane>
                  <ScrollPane layoutY="70.0" prefHeight="620.0" prefWidth="200.0" styleClass="scroll">
                     <content>
                        <VBox prefHeight="620.0" prefWidth="200.0">
                           <children>
                              <VBox fx:id="mainVbox" prefHeight="620.0" prefWidth="100.0" styleClass="box-menus">
                                 <children>
                                    <VBox prefWidth="100.0">
                                       <children>
                                          <ToggleButton alignment="CENTER_LEFT" mnemonicParsing="false" onAction="#handleMenuToggle" prefWidth="200.0" text="Prestamos">
                                             <styleClass>
                                                <String fx:value="menus" />
