                                                <String fx:value="menus" />
                                                <String fx:value="menu-group" />
                                             </styleClass>
                                          </ToggleButton>
                                          <VBox prefWidth="100.0" styleClass="box-submenus">
                                             <children>
                                                <ToggleButton alignment="CENTER_LEFT" mnemonicParsing="false" prefWidth="200.0" styleClass="submenus" text="Inventario" toggleGroup="$subMenuGroup" />
                                                <ToggleButton alignment="CENTER_LEFT" mnemonicParsing="false" prefWidth="200.0" styleClass="submenus" text="Descarte" toggleGroup="$subMenuGroup" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
                  <AnchorPane layoutY="690.0" prefHeight="60.0" prefWidth="200.0" styleClass="box-user">
                     <children>
